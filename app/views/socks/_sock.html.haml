%div{id: dom_id(sock), class: ["sock", matched_class(sock.id)]}
  %p
    %strong Name:
    = sock.name

  %p
    %strong Description:
    = sock.description

  %p
    %strong Gender:
    = sock.gender

  %p
    %strong Age:
    = sock.age

  %p
    %strong Height:
    = sock.height

  %p
    %strong Color:
    = sock.color

  %p
    %strong Matched:
    = is_matched?(sock.id)
